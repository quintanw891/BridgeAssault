<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.william.bridgeassault.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/far_cliff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:visibility="visible"
            app:srcCompat="@android:color/holo_green_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/water_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                app:srcCompat="@android:color/holo_blue_light" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".68"
                android:columnCount="@integer/default_columns"
                android:rowCount="@integer/default_rows"
                tools:layout_editor_absoluteX="384dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="0 0"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="0 1"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="0 2"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="1 0"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="1 1"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="1 2"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="2 0"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="2 1"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="2 2"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="3 0"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="3 1"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="3 2"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="4 0"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="4 1"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="4 2"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="5 0"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="5 1"
                    app:srcCompat="@drawable/normal_space" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:onClick="tapSpace"
                    android:tag="5 2"
                    app:srcCompat="@drawable/normal_space" />
            </GridLayout>

            <ImageView
                android:id="@+id/water_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                app:srcCompat="@android:color/holo_blue_light" />

        </LinearLayout>

        <ImageView
            android:id="@+id/near_cliff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            app:srcCompat="@android:color/holo_green_dark" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
